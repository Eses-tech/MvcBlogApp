@using MvcBlogApp.Models
@model List<Category>
@{
    ViewBag.Title = "Index";
}

<h2>Kategori Listesi</h2>
<p>

    <a href="~/Category/Create"<button class="btn btn-success">Yeni Kategori Ekle</button></a>

</p>

@if (TempData["Category"] != null)
{
    var category = (MvcBlogApp.Models.Category)TempData["Category"];
    <div class="alert alert-success" role="alert">
        <i class="glyphicon glyphicon-check"></i>
        Başarıyla Kaydedildi..
    </div>
}

<table class="table  table-striped">
    <thead>
        <tr>

            <th scope="col">Kategori Adı</th>
            <th scope="col">Blog Sayısı</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>

                <td>@Model[i].CategoryName</td>
                <td>@ViewBag.CategoryNumbers[i]</td>



                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = Model[i].Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = Model[i].Id }, new { @class = "btn btn-danger" })

                </td>

            </tr>
        }


    </tbody>
</table>
