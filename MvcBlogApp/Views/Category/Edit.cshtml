@using MvcBlogApp.Models
@model Category
@{
    ViewBag.Title = "Edit";
}

<h2>Kategori Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">

    

        <div class="form-group">
            <label for="InputCategoryName" class="control-label col-md-3 style="text-align:left">Kategori</label>
            @Html.TextBox("CategoryName", null, new { @class = "form-control col-md-6" })


        </div>

        
        <div class="form-group">
            <div class="col-md-6 text-right">
                <button type="submit" class="btn btn-primary">GÜNCELLE</button>
            </div>



        </div>
    </div>


}