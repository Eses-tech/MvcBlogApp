@using MvcBlogApp.Models
@model Blog

@{
    ViewBag.Title = "Edit";
}

<h2>Blog Güncelle</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
<div class="form-horizontal">

    <div class="form-group">
        <label for="InputHeader" class="control-label col-md-3">Başlık</label>
        @Html.TextBox("Header", null, new { @class = "form-control col-md-6" })

    </div>
    <div class="form-group">
        <label for="InputExplanation" class="control-label col-md-3">Açıklama</label>
        @Html.TextArea("Explanation", null, new { @class = "form-control col-md-6" })

    </div>
    <div class="form-group">
        <label for="InputContent" class="control-label col-md-3">İçerik</label>
        @Html.TextArea("Content", null, new { @class = "form-control col-md-6" })

    </div>

    <div class="form-group">
        <label for="InputCategoryName" class="control-label col-md-3">Kategori</label>
        @Html.DropDownList("CategoryId", null, new { @class = "form-control col-md-6" })


    </div>

    <div class="form-group">
        <label for="InputPicture" class="control-label col-md-3">Resim</label>
        @Html.TextBox("Picture", null, new { @class = "form-control col-md-6" })


    </div>

    <div class="form-group"  style="display:flex;align-items:center">

        <label for="InputApproval" class="control-label col-md-3"> Onay</label><br />
        <div class="col-md-6">
            <div class="checkbox">
                @Html.EditorFor(model => model.Approval)
            </div>
        </div>






    </div>

    <div class="form-group"  style="display:flex;align-items:center">

        <label for="InputHomePage" class="control-label col-md-3">Anasayfa Onay</label><br />
        <div class="col-md-6">
            <div class="checkbox">
                @Html.EditorFor(model => model.HomePage)
            </div>
        </div>






    </div>

    <div class="form-group">
        <div class="col-md-6 text-right">
            <button type="submit" class="btn btn-primary">GÜNCELLE</button>
        </div>



    </div>
</div>


}

